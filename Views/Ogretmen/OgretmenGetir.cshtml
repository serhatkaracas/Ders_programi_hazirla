@model WebProjeOdev.Models.Ogretmen

@{
    Layout = "_Layout";
}

<h2>Öğretmen Ekle</h2>

@if (User.IsInRole("ADMIN"))
{
    <div class="container">
        <form asp-controller="Ogretmen" asp-action="OgretmenGetir" method="post">
            <input asp-for="OgretmenID" type="hidden" />
            <div class="form-group">
                <label asp-for="AdSoyad" class="control-label"></label>
                <input asp-for="AdSoyad" class="form-control" />
                <span asp-validation-for="AdSoyad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BosGun" class="control-label"></label>
                <input asp-for="BosGun" class="form-control" />
                <span asp-validation-for="BosGun" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Kaydet</button>
        </form>
    </div>
}
else
{
    <div class="alert alert-danger" role="alert">
        Bu sayfaya erişim yetkiniz yok.
    </div>
}
